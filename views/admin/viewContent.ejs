<%- include('../includes/head.ejs') %>
</head>

<body>
	<%- include('../includes/navigation.ejs') %>
	<content>
		<table>
			<thead>
				<td>
					Content
				</td>
				<td>
					Number of Reviews
				</td>

				<td>
					Like Ratio
				</td>
				<td>
					Image
				</td>
				<td>
					Description
				</td>
				<td>
					Type
				</td>
			</thead>
			<tbody>

				<% for (let i = 0; i<content.length;i++) {%>
				<tr>
					<td><a href="../content/<%-content[i].content_id%>"><%- content[i].title %></a></td>
					<td> <%- content[i].count %> </td>
					<td>
						<% if(content[i].count==0){ %>
						<%- "No reviews yet" %>
						<% } else {%>
						<%- parseFloat((content[i].like_count/content[i].count)*100).toFixed(2) +"%" %>
						<% }%>
					</td>
					<td>
						<img class="view-content" src="/images/<%- content[i].image_url%>">
					</td>
					<td>
						<% if(content[i].details) {%>
						<%- content[i].details.substring(0,50) +'...'%>
						<%  }%>
					</td>
					<td>
						<%-content[i].type%>
						<img src="/images/<%-content[i].type%>.png" title="<%-content[i].type%>"
							alt="<%-content[i].type%>" class="type_img">
					</td </tr> <%  }%> </tbody> </table> </content> <%- include('../includes/end.ejs') %>